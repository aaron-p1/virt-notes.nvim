root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.fnl]
indent_size = unset

[Makefile]
indent_style = tab

[*.nix]
indent_size = 2

[*.lua]
charset = unset
end_of_line = unset
indent_size = unset
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = unset
